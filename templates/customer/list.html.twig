{% extends 'base.html.twig' %}

{% block content %}
    <h1>{{ 'Customers'|trans }}</h1>

    {% block page_contents %}
        {{ include('customer/form.html.twig') }}

        <table class="table">
            <thead>
                <tr>
                    <th scope="col">{{ 'first_name'|trans }}</th>
                    <th scope="col">{{ 'last_name'|trans }}</th>
                    <th scope="col">{{ 'phone_number'|trans }}</th>
                </tr>
            </thead>
            {% for customer in customers %}
                <tr>
                    <td>{{ customer.firstName }}</td>
                    <td>{{ customer.lastName }}</td>
                    <td>{{ customer.phoneNumber }}</td>
                </tr>
            {% endfor %}
        </table>
    {% endblock %}
{% endblock %}
